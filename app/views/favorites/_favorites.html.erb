<% if favorites.any? %>
<ul class="media-list">
  <% favorites.each do |favorite| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(favorite.micropost.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to favorite.micropost.user.name , user_path(favorite.micropost.user) %> <span class="text-muted">posted at <%= favorite.micropost.created_at %></span>
        </div>
        <div>
          <p><%= favorite.micropost.content %></p>
        </div>
        <div>
          <%= render 'favorites/favorite_button', micropost: favorite.micropost %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
<% end %>