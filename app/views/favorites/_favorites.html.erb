<ul class="media-list">
  <% favorites.each do |favorite| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(favorite.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to favorite.user.name, user_path(favorite.user) %> <span class="text-muted">posted at <%= favorite.micropost.created_at %></span>
        </div>
        <div>
          <p><%= favorite.micropost.content %></p>
        </div>
        <div>
          <% unless current_user == favorite.micropost.user %>
            <%= render 'favorites/favorite_button', micropost: favorite.micropost %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>